<% include ../../../partials/layout.ejs %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 mx-auto">

    	<h1><i class="fas fa-sign-in-alt"></i>Nuevo Producto</h1>

    	<% if(messages.length > 0) { %>
    		<div class="alert alert-danger">
    			<% messages.forEach(function(message) { %>
    				<p><%= message %></p>
    			<% }); %>
    		</div>
    	<% } %>

    	<!-- MATERIEPRIME FORM -->
    	<form action="/app/elaborado" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label>Produccion:</label>
          <select name="proc" required>
            <option value="" class="form-control">SELECCIONAR
            <% producciones.forEach(function(produccion){ %>
              <option value="<%= produccion._id %>" class="form-control"><%= produccion.prod.nombre %>
            <% }); %>
          </select>
        </div>
        <div class="form-group">
          <label>Empacado</label>
          <input type="number" placeholder="Número de unidades empacadas" class="form-control" name="empacado" >
        </div>
        <div class="form-group">
          <label>Averias</label>
          <input type="number" placeholder="Número de averias" class="form-control" name="averias" >
        </div>
    		<button type="submit" class="btn btn-success btn-lg">Guardar</button>
    	</form>

    	<hr>
    </div>
  </div>
  </div>
</div>
