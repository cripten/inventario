<% include ../../../partials/layout.ejs %>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3 mx-auto">

  	<h1><i class="fas fa-sign-in-alt"></i>Editar salida</h1>

  	<% if(messages.length > 0) { %>
  		<div class="alert alert-danger">
  			<% messages.forEach(function(message) { %>
  				<p><%= message %></p>
  			<% }); %>
  		</div>
  	<% } %>
      	<!-- Edit FORM -->
    <form action="/app/inOut/<%= inOut._id %>?_method=PUT" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label>Cantidad</label>
        <input type="number" class="form-control" name="cantidad" value="<%= inOut.cantidad %>">
      </div>
      <div class="form-group">
        <label>Presentacion</label>
        <input type="number" class="form-control" name="presentacion" value="<%= inOut.presentacion %>">
      </div>
      <div class="form-group">
        <label>Marca</label>
        <input type="text" placeholder="Nombre de la marca" class="form-control" name="marca" value="<%= inOut.marca %>" onkeyup="mayus(this);">
      </div>
      <input type="hidden" name="inv" value="<%= inOut.inv._id %>">
      <input type="hidden" name="valorUni" value="0">
      <input type="hidden" name="numFact" value="0">
      <input type="hidden" name="tipo" value="salida">
      <input type="hidden" name="bodega" value="principal">
      <input type="hidden" name="resetIn" value="si">

      <button type="submit" class="btn btn-success btn-lg">Guardar </button>
    </form>


  </div>
</div>
</div>
<script type="text/javascript">
  function mayus(e) {
    e.value = e.value.toUpperCase();
  }
</script>
